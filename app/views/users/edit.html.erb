<h1>編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
		  <label><%= f.radio_button :gender, "男", class: 'form-control' %>男</label>
		  <label><%= f.radio_button :gender, "女", class: 'form-control' %>女</label>
		  
		  <div class="birthday_field">
		  	<%= f.label :birthday %>
    		<%= f.date_select(
            :birthday,
            use_month_numbers: true,
            start_year:     1930,
            end_year:       (Time.now.year),
            include_blank: true,
            date_separator: '/', class: 'form-control')
     		%>
		  </div>
      <%= f.submit "Edit my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>